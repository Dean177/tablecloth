(executable
 (name runtest)
 (flags
  (-warn-error +A))
 (libraries tablecloth alcotest))

(rule
 (target BoolTest.re)
 (action
  (copy ../../bucklescript/test/BoolTest.re ./BoolTest.re)))

(rule
 (target IntTest.re)
 (action
  (copy ../../bucklescript/test/IntTest.re ./IntTest.re)))

(rule
 (alias runtest)
 (action
  (run ./runtest.exe)))
